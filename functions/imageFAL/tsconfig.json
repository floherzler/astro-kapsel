{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "es2022"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "env.d.ts"
    ]
}